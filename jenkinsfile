pipeline {
    agent any 
    stages {
        stage('clean stage') { 
            steps {
                echo 'mvn clean'
                sh 'mvn clean'
            }
        }
        stage('validate stage') {
            steps {
               echo 'validating the application'
               sh 'mvn validate'
            }
        }

        stage('compile stage') { 
            steps {
                echo 'compiling the application'
                sh 'mvn compile'
            }
        }
        stage('Testing stage') { 
            steps {
                echo 'Testing the application'
                sh 'mvn test'
            }
        }
        stage('Build stage') {
                    steps {
                        echo 'Building the application'
                        sh 'mvn install'
                    }
                }
        stage('Deploy stage') { 
            steps {
                echo 'Deploying the application'
            }
        }
}
}